<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:padding="12dp">

    <Spinner
        android:id="@+id/contactedBySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/concerns_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Customer Concerns"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contactedBySpinner"
        app:met_baseColor="@color/black"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/realblue" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/comments_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Admin Comments"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/concerns_et"
        app:met_baseColor="@color/black"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/realblue" />
</androidx.constraintlayout.widget.ConstraintLayout>