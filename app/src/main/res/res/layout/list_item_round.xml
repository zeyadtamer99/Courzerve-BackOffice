<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_round"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="16dp"
    android:orientation="vertical"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/title_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/Blue"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/v"
            app:layout_constraintStart_toStartOf="@+id/v"
            app:layout_constraintTop_toTopOf="@+id/v"
            tools:text="Round 1" />
        // round

        <ImageView
            android:id="@+id/imageView_students"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/students_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_round" />
        // student image

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="@+id/imageView_students"
            app:layout_constraintStart_toStartOf="@+id/imageView_students"
            app:layout_constraintTop_toBottomOf="@+id/imageView_students"
            android:src="@drawable/accepting" />
        // status image

        <TextView
            android:padding="4dp"
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/Blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_status"
            app:layout_constraintStart_toEndOf="@+id/iv_status"
            app:layout_constraintTop_toTopOf="@+id/iv_status"
            tools:text="Accepting" />
        // status text

        <TextView
            android:id="@+id/student_tv_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/Blue"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_students"
            app:layout_constraintStart_toEndOf="@+id/imageView_students"
            app:layout_constraintTop_toTopOf="@+id/imageView_students"
            tools:text="7" />
        // text bta3 students

        <Button

            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/mybutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent" />
        customer button

        <TextView
            android:id="@+id/textCustomersbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:elevation="5dp"
            android:text="Customers"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/button" />
        //text customer button

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="5dp"
            android:src="@drawable/students_white"
            app:layout_constraintBottom_toBottomOf="@id/button"
            app:layout_constraintEnd_toStartOf="@id/textCustomersbtn"
            app:layout_constraintStart_toStartOf="@id/button"
            app:layout_constraintTop_toTopOf="@id/button" />
        //image customer button

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/mybutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button" />
        // round button

        <TextView
            android:id="@+id/textRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:elevation="5dp"
            android:text="Round"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/button2"
            app:layout_constraintEnd_toEndOf="@id/button2"
            app:layout_constraintTop_toTopOf="@id/button2" />
        // text round btn

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="5dp"
            android:src="@drawable/round_icon"
            app:layout_constraintBottom_toBottomOf="@id/button2"
            app:layout_constraintEnd_toStartOf="@id/textRound"
            app:layout_constraintStart_toStartOf="@id/button2"
            app:layout_constraintTop_toTopOf="@id/button2" />
        // image round btn

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>